# projects.ttl

Projects(title: body: url:){
    Project = (title:, body:, url:){     # this is an inline template 
        <div id="[index]">
            <h3>[title]</h3>
            <p>[body]</p>
            <Image(url: [url])>          # a nested template lives as a "tag"
        </div>}
    }

    projects -> Project(title: [0], body: [1], url: [2])
}


